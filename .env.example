# PDF Reader Module Configuration
# Copy this file to .env and update values for production

# API Configuration
VITE_PDF_API_URL=https://api.dda.az/api
VITE_USE_MOCK_PDF_API=true

# Security Settings
VITE_PDF_SESSION_DURATION=1800000  # 30 minutes in milliseconds
VITE_SCREENSHOT_WARNING_ENABLED=true
VITE_JAILBREAK_DETECTION_ENABLED=true

# Watermark Configuration
VITE_WATERMARK_OPACITY=0.12
VITE_WATERMARK_ANGLE=14
VITE_WATERMARK_REFRESH_INTERVAL=60000  # 60 seconds

# Development
VITE_DEBUG_PDF_SECURITY=false

# Blog Module Configuration
VITE_API_BASE_URL=http://manager.test-domain.co/az/api
VITE_USE_MOCK_BLOG_API=false